  "keyFeatures": [
    "Export WorkFlowy data as Markdown or JSON",
    "Filter nodes by pattern with multiple match modes",
    "Fetch and cache raw WorkFlowy data locally",
    "Interactive authentication with session management",
    "Programmatic API for library usage",
    "Support for shared and team trees"
  ],
  "publicApiSurface": [
    "wf [pattern] - Export and filter WorkFlowy data",
    "wf fetch - Download raw WorkFlowy data",
    "wf login - Save session credentials",
    "WorkFlowyClient - HTTP client for WorkFlowy API",
    "queryNodes() - Filter nodes by pattern",
    "buildMarkdown() - Convert nodes to Markdown",
    "buildJson() - Convert nodes to JSON",
    "collectAllRoots() - Collect main and auxiliary trees",
    "walkNodes() - Traverse node tree",
    "countNodes() - Count total nodes in tree"
  ]
